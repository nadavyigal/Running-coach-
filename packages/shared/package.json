{
  "name": "@runsmart/shared",
  "version": "0.0.1",
  "private": true,
  "description": "Shared TypeScript types and contracts for RunSmart web and iOS apps",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "types": "./src/index.ts"
    },
    "./models/*": {
      "import": "./src/models/*.ts",
      "types": "./src/models/*.ts"
    },
    "./api/*": {
      "import": "./src/api/*.ts",
      "types": "./src/api/*.ts"
    }
  },
  "scripts": {
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "clean": "rm -rf dist",
    "generate:swift": "tsx scripts/generate-swift-types.ts"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "eslint": "^8.0.0",
    "tsx": "^4.0.0"
  },
  "keywords": [
    "runsmart",
    "shared",
    "types",
    "models"
  ]
}
