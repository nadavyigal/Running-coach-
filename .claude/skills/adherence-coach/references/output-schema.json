{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["reshuffle", "message"],
  "properties": {
    "reshuffle": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "date": { "type": "string" },
          "newSession": { "type": "string" },
          "rationale": { "type": "string" }
        }
      }
    },
    "message": { "type": "string" },
    "focus": { "type": "array", "items": { "type": "string" } },
    "safetyFlags": { "type": "array", "items": { "type": "object" } }
  }
}
