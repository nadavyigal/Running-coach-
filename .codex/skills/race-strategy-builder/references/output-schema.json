{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["pacingPlan", "fuelingPlan"],
  "properties": {
    "pacingPlan": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": { "segment": { "type": "string" }, "targetPace": { "type": "string" }, "note": { "type": "string" } }
      }
    },
    "fuelingPlan": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": { "timeOrKm": { "type": "string" }, "action": { "type": "string" } }
      }
    },
    "contingencies": { "type": "array", "items": { "type": "string" } },
    "safetyFlags": { "type": "array", "items": { "type": "object" } }
  }
}
